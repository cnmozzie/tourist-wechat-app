<!--index.wxml-->
<view class="container">
  <view  bindtap="bindViewTap" class="userinfo">
    <image class="userinfo-avatar" src="{{userInfo.avatarUrl}}" background-size="cover"></image>
    <text class="userinfo-nickname">{{userInfo.nickName}}</text>
  </view>
  <view class="weui-panel weui-panel_access">
    <view class="weui-panel__hd">最新活动</view>
      <view class="weui-panel__bd">
          <view class="weui-media-box weui-media-box_text" bindtap="bindActivityTap" id="1">
            <view class="weui-media-box__title weui-media-box__title_in-text">香山长跑</view>
            <view class="weui-media-box__desc">这是一个十多公里的迷你马拉松。从北大到香山，难得的长跑体验，你值得拥有。</view>
          </view>
          <view class="weui-media-box weui-media-box_text" bindtap="bindActivityTap" id="2">
            <view class="weui-media-box__title weui-media-box__title_in-text">阳台山拉练</view>
            <view class="weui-media-box__desc">朋友，你体验过绝望吗？欢迎参加阳台山拉练。</view>
          </view>
      </view>
      <view class="weui-panel__ft">
          <view class="weui-cell weui-cell_access weui-cell_link">
            <view class="weui-cell__bd">查看更多</view>
            <view class="weui-cell__ft weui-cell__ft_in-access"></view>
          </view>
      </view>
    </view>
</view>
